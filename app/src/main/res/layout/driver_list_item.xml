<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/vehicleCard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/dashboardBackground"
            android:weightSum="10">

            <TextView
                android:id="@+id/nameDriver"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Mohammed"
                android:letterSpacing="0.05"
                android:textColor="@color/appGrey"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_light" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.03"
                android:background="@color/mileStone" />

            <TextView
                android:id="@+id/idDriver"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="85682637"
                android:textColor="@color/appGrey"
                android:letterSpacing="0.05"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_light" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.03"
                android:background="@color/mileStone" />

            <TextView
                android:id="@+id/driverPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/appGrey"
                android:text="33689763"
                android:letterSpacing="0.05"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_light" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.03"
                android:background="@color/mileStone" />

            <TextView
                android:id="@+id/driverNationality"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Bahraini"
                android:textColor="@color/appGrey"
                android:letterSpacing="0.05"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_light" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:weightSum="3"
                android:orientation="horizontal">


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>